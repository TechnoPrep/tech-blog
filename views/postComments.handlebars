{{#if session.logged_in}}
<div class="session" data-isloggedin="true" data-userid='{{session.user_id}}'></div>
{{else}}
<div class="session" data-isloggedin="false"></div>
{{/if}}

<section class="hero is-fullheight">
  <div class="container px-4 py-2" id="featured-3">
    <div class="row border-bottom">
      <div class="col-6 d-flex align-items-end">
        <h2 class="">
          Comments
        </h2>
      </div>
      <div id='add-comment' class="col-6 d-flex justify-content-end">
      </div>
    </div>

{{#post }} 
    <div class="row bg-primary text-white mt-2 pt-3 rounded-top">
      <div class="feature col-6 d-flex align-items-end">
        <h2 id="post-title" data-postid="{{id}}">
          {{title}}
        </h2>
      </div>
      <div class="col-6 d-flex justify-content-end align-items-end">
        <h6 class="post-info" data-Date="{{date_created}}" data-user="{{user.name}}">  
        </h6>
      </div>
    </div>
    
    <div id="post-body" class="row border border-secondary border-2 p-4">
      <p>
        {{content}}
      </p>
    </div>
{{/post }} 
    
    <div class="divider"></div>
  </div>

{{#if comments.length}}
  {{#each comments as |comment| }}
    <div  class="container px-4 py-2">
      <div class="row bg-primary text-white pt-2 rounded-top">
        <div class="feature col-6 d-flex align-items-end">
          <h6 class="post-info" data-Date="{{comment.date_created}}" data-user="{{comment.user.name}}">  
          </h6>
        </div>
        <div data-commentid="{{comment.id}}" data-commenterid="{{comment.user.id}}" class="col-6 d-flex justify-content-end align-items-end edit-button">
        </div>
      </div>

      <div class="row border border-secondary border-2 p-4">
        <p>
          {{comment.comment}}
        </p>
      </div>
    </div>
  {{/each }}
{{/if }}
</section>

<script src="/js/comments.js"></script>
