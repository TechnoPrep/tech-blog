<div class="session" data-isloggedin="false"></div>

<section class="hero is-fullheight">
  <div class="container px-4 py-5" id="featured-3">
    <h2 class="pb-2 border-bottom">
      Account Sign-Up
    </h2>
  </div>
</section>

<section class="container">
  <div class="row col-12">
    <div class="d-flex justify-content-center">
    <div class="col-6 form-signin text-center">
          <form>
          <div class="row mb-3">
          <label for="text" class="col-sm-2 col-form-label col-form-label-lg">Name:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="display-name" placeholder="John Wick">
            </div>
          </div>  

          <div class="row mb-3">
          <label for="email" class="col-sm-2 col-form-label col-form-label-lg">Email:</label>
            <div class="col-sm-10">
              <input type="email" class="form-control" id="email" placeholder="wheresmydog@mail.com">
            </div>
          </div>

          <div class="row mb-3">
          <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Password:</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="password" placeholder="Password">
            </div>
          </div>

          <div class="row mb-3">
          <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">Confirm:</label>
            <div class="col-sm-10">
              <input type="password" class="form-control" id="confirm-password" placeholder="Confirm Password">
            </div>
          </div>
  
          <button id="create-account" class="w-50 btn btn-lg btn-primary mb-3" type="submit">Sign Up!</button>
          
          <div class="mb-3">
            <a id="signin" href="#"> Already have an account? Sign In!</a>
          </div>

          <p class="mt-5 mb-3 text-muted">© 2017–2021</p>
        </form>
      </div>
    </div>
  </div>
</section>

